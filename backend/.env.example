# Server Configuration
PORT=3000
NODE_ENV=development

# Ethereum Configuration
ETHEREUM_RPC_URL=https://eth.llamarpc.com
ETHEREUM_BRIDGE_ADDRESS=0x...
ETHEREUM_NFT_ADDRESS=0x...
ETHEREUM_CHAIN_ID=1

# MegaETH Configuration
MEGAETH_RPC_URL=https://rpc.megaeth.io
MEGAETH_BRIDGE_ADDRESS=0x...
MEGAETH_NFT_ADDRESS=0x...
MEGAETH_CHAIN_ID=42069

# Relayer Configuration
RELAYER_PRIVATE_KEY=0x...
RELAYER_ADDRESS=0x...
AUTO_SUBMIT_ROOTS=true
CONFIRMATION_BLOCKS=3

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/bb_bridge
REDIS_URL=redis://localhost:6379

# API Configuration
API_KEY=your-secret-api-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ALERT_WEBHOOK_URL=https://hooks.slack.com/...

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bridge.log

# WebSocket
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# Job Queue
BULL_REDIS_URL=redis://localhost:6379
PROOF_GENERATION_CONCURRENCY=5
ROOT_SUBMISSION_CONCURRENCY=2

# Safety
MIN_BALANCE_ETH=0.1
MIN_BALANCE_MEGA=1.0
PAUSE_ON_ERROR=true
